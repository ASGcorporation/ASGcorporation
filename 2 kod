  <script>
    class ProductDTO {
      constructor({ img, title, price, priceNum, desc }) {
        this.img = img; this.title = title; this.price = price; this.priceNum = priceNum; this.desc = desc;
      }
    }
    // Każdy produkt ma SWÓJ obrazek (CC0/Pixabay)
    const products = [
      new ProductDTO({ img: 'https://cdn.pixabay.com/photo/2017/03/28/12/10/airsoft-2181452_1280.jpg', title: 'Replika karabinka ASG M4', price: '799 zł', priceNum: 799, desc: 'Solidna replika M4 do airsoftu, idealna na początek i dla zaawansowanych.' }),
      new ProductDTO({ img: 'https://cdn.pixabay.com/photo/2017/01/10/19/05/coil-1964415_1280.jpg', title: 'Sprężyna do karabinka ASG M120', price: '29 zł', priceNum: 29, desc: 'Sprężyna główna M120 – idealna do tuningów replik AEG.' }),
      new ProductDTO({ img: 'https://cdn.pixabay.com/photo/2014/12/21/23/54/pipe-578265_1280.png', title: 'Lufa precyzyjna 6.03mm 229mm', price: '99 zł', priceNum: 99, desc: 'Lufa precyzyjna do replik M4/M16. Zwiększa celność oraz zasięg.' }),
      new ProductDTO({ img: 'https://cdn.pixabay.com/photo/2016/11/18/19/36/gearing-1839603_1280.jpg', title: 'Tłok poliwęglanowy do AEG', price: '39 zł', priceNum: 39, desc: 'Wytrzymały tłok z zębami stalowymi. Idealny do tuningów.' }),
      new ProductDTO({ img: 'https://cdn.pixabay.com/photo/2014/12/21/23/50/engine-578161_1280.png', title: 'Silnik High Torque Long Type', price: '149 zł', priceNum: 149, desc: 'Silnik do replik AEG typu long. Większa szybkość reakcji.' }),
      new ProductDTO({ img: 'https://cdn.pixabay.com/photo/2013/07/13/12/01/battery-145009_1280.png', title: 'Bateria LiPo 11,1V 1200mAh', price: '89 zł', priceNum: 89, desc: 'Wysokowydajna bateria do replik ASG. Więcej strzałów.' }),
      new ProductDTO({ img: 'https://cdn.pixabay.com/photo/2016/11/29/04/00/magazine-1867129_1280.jpg', title: 'Magazynek hi-cap do M4/M16 300bb', price: '39 zł', priceNum: 39, desc: 'Magazynek typu hi-cap o pojemności 300 kulek.' }),
      new ProductDTO({ img: 'https://cdn.pixabay.com/photo/2017/01/10/19/05/coil-1964415_1280.jpg', title: 'Prowadnica sprężyny do G36', price: '24 zł', priceNum: 24, desc: 'Wzmocniona prowadnica sprężyny do replik G36.' }),
      new ProductDTO({ img: 'https://cdn.pixabay.com/photo/2016/11/18/19/36/gearing-1839603_1280.jpg', title: 'Zestaw zębatek High Speed v2/v3', price: '59 zł', priceNum: 59, desc: 'Komplet zębatek High Speed do gearboxów v2 i v3.' })
    ];
    function renderCatalog() {
      const catalog = document.getElementById('product-catalog');
      catalog.innerHTML = '';
      products.forEach((product, idx) => {
        const div = document.createElement('div');
        div.className = 'product';
        div.innerHTML = `
          <div class="product-img-wrap"><img src="${product.img}" alt="${product.title}"></div>
          <div class="product-title">${product.title}</div>
          <div class="product-price">${product.price}</div>
          <div class="product-desc">${product.desc}</div>
          <button class="add-to-cart-btn">Dodaj do koszyka</button>
        `;
        // ... tu możesz dodać obsługę modali, koszyka itd. ...
        catalog.appendChild(div);
      });
    }
    renderCatalog();
  </script>
